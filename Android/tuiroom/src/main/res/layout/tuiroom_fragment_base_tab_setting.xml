<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tuiroom_bg_more_action"
    android:orientation="vertical"
    tools:background="@drawable/tuiroom_bg_more_action">

    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/tuiroom_bottom_dialog_tip" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        app:tabIndicatorColor="@color/tuiroom_color_blue"
        app:tabIndicatorHeight="4dp"
        app:tabMinWidth="16dp"
        app:tabSelectedTextColor="@color/tuiroom_color_blue"
        app:tabTextAppearance="@style/TUIRoomBaseTabFragmentTabText"
        app:tabTextColor="@color/tuiroom_color_tab_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFEEEEEE" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="280dp" />
</LinearLayout>