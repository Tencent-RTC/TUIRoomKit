<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TUIBeautyDialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/tuibeauty_color_bg_dialog</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="TUIBeautyLoadingDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>