{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "RoomKit/**/*.ts",
    "RoomKit/**/*.d.ts",
    "RoomKit/**/*.tsx",
    "RoomKit/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
