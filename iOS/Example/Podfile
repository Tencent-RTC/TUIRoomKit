# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'
source 'https://github.com/CocoaPods/Specs.git'

# UI库
def ui
  pod 'SnapKit'
  pod 'Kingfisher'
  pod 'Toast-Swift'
end

# 工具库
def tool
  pod 'Alamofire'
  pod 'TXLiteAVSDK_TRTC', '9.9.11217'
end

# 本地依赖库
def local
  pod 'TXAppBasic', :path => "../TXAppBasic/"
  pod 'TUIBeauty', :path => "../TUIBeauty/"
  pod 'TUIBarrage', :path => "../TUIBarrage/"
end

def pod_local(type)
  loadLocalPod('TUIRoom', type)
end

def loadLocalPod(name, type)
    pod "#{name}/#{type}", :path => "../"
end

target 'DemoApp' do
  use_frameworks!
  ui
  tool
  local
  pod_local('TRTC')

  target 'TXReplayKit_Screen' do
    inherit! :search_paths
    pod 'TXLiteAVSDK_TRTC/ReplayKitExt', '9.9.11217'
  end
end

post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['ENABLE_BITCODE'] = 'NO'
      end
    end
end
